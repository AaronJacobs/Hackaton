{
  "manifest_version": 3,
  "name": "Code Smarter (and Harder)",
  "version": "1.0",
  "description": "Removes all content from home page of Facebook and Instagram, other platforms coming",
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*","https://www.facebook.com/*","https://www.instagram.com/*"],
      "js": ["jquery.min.js", "./main.js"],
      "css": ["index.css"]
    }
  ],
  "icons": {
    "16": "slythplush_16.png",
    "32": "slythplush_32.png",
    "48": "slythplush_48.png",
    "128": "slythplush_128.png"
  },
  "action": {
    "default_popup": "popup.html"
  }
}