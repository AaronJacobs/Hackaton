{
  "manifest_version": 3,
  "name": "Focus",
  "version": "1.0",
  "description": "Removes all content from home page of Youtube, helping to improve Focus",
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*","https://www.facebook.com/*","https://www.instagram.com/*"],
      "js": ["jquery.min.js", "./main.js"],
      "css": ["index.css"]
    }
  ],
  "icons": {
    "16": "pencil_icon16.png",
    "32": "pencil_icon32.png",
    "48": "pencil_icon48.png",
    "128": "pencil_icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  }
}